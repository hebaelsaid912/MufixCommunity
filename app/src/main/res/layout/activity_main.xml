<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_weight="1"
            android:layout_alignParentTop="true"
            android:layout_marginTop="-57dp"
            android:scaleType="centerCrop"
            android:src="@drawable/back1"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            android:id="@+id/titlebar"
            >
            <ImageButton
                android:id="@+id/BackButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/back"

                android:layout_margin="3dp"
                />
            <ImageView
                android:id="@+id/logoimage"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:src="@drawable/logo"/>
            <ImageView
                android:id="@+id/menuImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/menu"
                android:layout_margin="5dp"
                android:onClick="signin"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/teamsmembers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Online Learning"
            android:paddingTop="30dp"
            style="@style/h1"
            android:textColor="@color/colorPrimary"
            android:layout_centerInParent="true"
            />

    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_margin="5dp"
        android:padding="7dp"
        android:scrollbarSize="3dp"
        android:scrollbarStyle="insideOverlay"
        android:layout_alignParentBottom="true"
        android:background="@drawable/shapes"  >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Schedules"
                style="@style/teams"
                android:onClick="schedules"/>
            <View
                android:layout_width="match_parent"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_height="1.5dp"
                android:background="#9D0B0E"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Live Broadcast "
                style="@style/teams"
                android:onClick="live"/>
            <View
                android:layout_width="match_parent"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_height="1.5dp"
                android:background="#9D0B0E"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lectures"
                style="@style/teams"
                android:onClick="lecture"/>
            <View
                android:layout_width="match_parent"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_height="1.5dp"
                android:background="#9D0B0E"
                android:layout_gravity="center"/>

            <TextView
                style="@style/teams"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Discussions"
                android:onClick="discussions"/>
            <View
                android:layout_width="match_parent"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_height="1.5dp"
                android:background="#9D0B0E"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sheets"
                style="@style/teams"
                android:onClick="sheets"/>
            <View
                android:layout_width="match_parent"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_height="1.5dp"
                android:background="#9D0B0E"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tasks"
                style="@style/teams"
                android:onClick="DevelopmentTeam"/>
            <View
                android:layout_width="match_parent"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_height="1.5dp"
                android:background="#9D0B0E"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Grades"
                style="@style/teams"
                android:onClick="OrganizationTeam"/>
            <View
                android:layout_width="match_parent"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_height="1.5dp"
                android:background="#9D0B0E"
                android:layout_gravity="center"/>




        </LinearLayout>
    </ScrollView>


</LinearLayout>